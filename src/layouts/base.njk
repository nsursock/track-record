<!DOCTYPE html>
<html lang="{{ meta.lang or site.lang }}">
  <head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>{{ site.title }} - {{ title or meta.title }}</title>
    {% include "meta.njk" %}
    <link href="https://fonts.googleapis.com/css2?family=Chakra+Petch:wght@300;400;500;600;700&display=swap" rel="stylesheet"/>
    <link rel="stylesheet" href="{{ '/node_modules/flatpickr/dist/flatpickr.min.css' | url }}"/>
    <link rel="stylesheet" href="{{ '/node_modules/apexcharts/dist/apexcharts.css' | url }}"/>
    <link rel="stylesheet" href="{{ '/assets/css/index.css' | url }}"/>
  </head>

  <body>

    {% include "header.njk" %}

    <main id="main" class="px-4 sm:px-6 md:px-8">

      {{ content | safe }}

    </main>

    {% include "footer.njk" %}

    <script type="module" src="{{ '/assets/js/index.js' | url }}"></script>
    <script type="module" src="{{ '/node_modules/lodash/lodash.js' | url }}"></script>
  </body>
</html>