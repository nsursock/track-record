        <!-- Right Section - Image Grid -->
        <div class="w-full lg:w-1/2">
          <div class="grid grid-cols-2 auto-rows-fr gap-4 p-4 h-[600px]">
            <div class="relative group">
              <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent rounded-3xl z-10"></div>
