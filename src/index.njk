<!-- Featured Posts Section -->
<section class="py-20 bg-base-200">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-7xl mx-auto">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold mb-4">Featured Posts</h2>
        <p class="text-secondary text-xl">Discover our latest and most insightful song analyses</p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {% for post in collections.featured %}
          <div class="card bg-base-100 shadow-xl group">
            <figure class="relative overflow-hidden w-full">
              <div class="w-full h-48">
                {% image "src/assets/images/posts/" + post.data.hero_image + ".png", post.data.title, "(min-width: 1200px) 1400px, 100vw", "w-full h-full object-cover" %}
              </div>
            </figure>
            <div class="card-body">
              <div class="flex flex-col mb-4">
                <div class="flex items-center gap-4">
                  <div class="avatar">
                    <div class="size-12 rounded-full">
                      {% image "src/assets/images/avatars/" + (post.data.author.avatar | default("avatar1.jpg")) + ".jpg", post.data.author.name, "100px", "w-full h-full object-cover" %}
                    </div>
                  </div>
                  <div>
                    <h4 class="font-semibold text-primary">{{ post.data.author.name }}</h4>
                    <p class="text-sm text-secondary">{{ post.data.author.role }}</p>
                  </div>
                </div>
                <span class="badge badge-soft badge-secondary badge-lg flex items-center gap-2 mt-4">
                  <span class="icon-[tabler--clock] size-4"></span>
                  <span>{{ post.date | date('MMMM D, YYYY') }}</span>
                </span>
              </div>
              <h3 class="card-title">{{ post.data.title }}</h3>
              <p class="text-secondary">{{ post.data.description }}</p>
              <div class="card-actions justify-end mt-4">
                <a href="{{ post.url }}" class="btn btn-primary btn-soft relative overflow-hidden group">
                  <span class="absolute inset-0 bg-gradient-to-r from-primary to-error opacity-20 blur-lg group-hover:opacity-40 transition-opacity"></span>
                  <span class="relative z-10">Read More</span>
                </a>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</section>